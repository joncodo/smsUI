\:host
  display: flex
  flex: 1
  height: 100%

textarea
  display: block
  position: absolute
  bottom: 0
  left: 0
  right: 0
  z-index: 0
  width: 100%
  height: 3rem
  font-size: .875rem
  resize: none
  border: 0 none
  border-top: 5px solid #666

.content
  padding: 1rem
  background-color: #fafafa

.message
  padding: 1rem
  margin: 1rem 0
  max-width: 50%
  border-radius: 50px
  background-color: #607689

  &.user
    color: white
    text-align: right
    align-self: flex-end
    border-bottom-right-radius: 0

  &.bot
    background-color: white
    border-bottom-left-radius: 0
