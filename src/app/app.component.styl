@import '../styles/variables'

\:host
  display: flex
  flex: 1
  flex-direction: column
  height: 100%

textarea
  display: block
  width: 100%
  height: 3rem
  font-size: .875rem
  resize: none
  border: 0 none
  border-top: 5px solid #ddd
  padding: .25rem .5rem
  outline 0

input[type="text"]
  display block
  width: 100%
  font-size: .875rem
  border: 0 none
  border-top: 2px solid #ddd
  padding: .25rem .5rem
  outline 0
  line-height 2.5em
  &:focus
    border-color $primary

::-webkit-input-placeholder
  color: #ccc

::-moz-placeholder
  color: #ccc

:-ms-input-placeholder
  color: #ccc

:-moz-placeholder
  color: #ccc

.content
  padding: 1rem
  background-color: #fafafa
  overflow: scroll
  height: 100%

.logoContainer
  min-width: "calc(%s + (%s * 4))" % ($logo-width $logo-border-width)

.logo
  margin-top: 1rem

.timestamp
  margin: 1rem 0 0 1.75rem
  color: #aaa

.messageContainer
  position: relative

.message
  padding: 1rem
  margin: 0
  max-width: 75%
  border-radius: $message-border-radius
  background-color: $message-primary

  &.first
    margin-top: 1.5rem

  &.middle
  &.last
    margin-top: .5rem

    + .timestamp
      margin-top: .5rem

  &.user
    color: white
    text-align: right
    align-self: flex-end

  &.bot
    background-color: $message-secondary

    + .timestamp
      text-align: right
      padding-left: 0
      margin-left: 0
.message:before
  border-color $primary
  border-radius 50% 50% 50% 50%
  border-style solid
  border-width 0 20px
  bottom -2px
  clip rect(20px, 35px, 42px, 0px)
  content " "
  height 40px
  position absolute
  right -48px
  width 30px
.message.bot:before
  border-color $message-secondary
  left -48px
  transform rotateY(180deg)
