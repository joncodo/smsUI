@import '../styles/variables'

\:host
  display: flex
  flex: 1
  flex-direction: column
  height: 100%

textarea
  display: block
  width: 100%
  height: 3rem
  font-size: .875rem
  resize: none
  border: 0 none
  border-top: 5px solid #ddd
  padding: .25rem .5rem

::-webkit-input-placeholder
  color: #ccc

::-moz-placeholder
  color: #ccc

:-ms-input-placeholder
  color: #ccc

:-moz-placeholder
  color: #ccc

.content
  padding: 1rem
  background-color: #fafafa
  overflow: scroll
  height: 100%

.logoContainer
  min-width: "calc(%s + (%s * 4))" % ($logo-width $logo-border-width)

.logo
  margin-top: 1rem

.timestamp
  margin: 1rem 0 0 1.75rem
  color: #aaa

.messageContainer
  position: relative
  padding-right: 1.75rem

.message
  padding: 1rem
  margin: 0
  max-width: 75%
  border-radius: $message-border-radius
  background-color: $message-primary

  &.first
    margin-top: 1.5rem

  &.middle
  &.last
    margin-top: .5rem

    + .timestamp
      margin-top: .5rem

  &.user
    color: white
    text-align: right
    align-self: flex-end
    border-bottom-right-radius: 0

    &.middle
      border-top-right-radius: 0

    &.last
      border-top-right-radius: 0
      border-bottom-right-radius: $message-border-radius

  &.bot
    background-color: white
    border-bottom-left-radius: 0

    &.middle
      border-top-left-radius: 0

    &.last
      border-top-left-radius: 0
      border-bottom-left-radius: $message-border-radius

    + .timestamp
      text-align: right
      padding-left: 0
      margin-left: 0
