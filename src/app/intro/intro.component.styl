$primary = #2dbd9b
$grey = #bbb

\:host
  background-color: rgba($grey, .7)
  padding: 2rem
  display: flex
  justify-content: center
  align-items: center
  z-index: 1

.content
  background-color: white
  padding: 1rem 2rem
  border: 2px solid $primary
  box-shadow: 0 0 14px 4px #888
  position: relative

.logo
  height: 3rem
  width: 3rem
  border-radius: 50%
  position: absolute
  left: -1.5rem
  top: -1.5rem
  border: 2px solid $primary
  background-color: white
  box-shadow: 0 0 14px 4px #888

.sidebar
  border-left: 1px solid #eee
  padding-left: 3%

  p
    margin: 0

a.action
  padding: .75rem .5rem
  margin-bottom: 1rem
  text-decoration: none
  border: 1px solid #eee
  border-radius: 4px
  cursor: pointer

  &:hover
    box-shadow: 0px 1px 1px rgba(33,33,33,.3)

  &:active
    box-shadow: 0px 1px 1px rgba(33,33,33,.3) inset
    background-color: #fafafa
    color: #666
